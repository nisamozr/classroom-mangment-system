<div class="d-flex" id="wrapper">

    <!-- Sidebar -->
    {{#if user}}
    {{>tutor-sidenav}}
    {{/if}}
    <!-- /#sidebar-wrapper -->

    <!-- Page Content -->

    <div class="container-fluid">

         <div class="row topic">
                <div class="col-md-12 m-2 ">
                    <h3 class="text-center">Announcement</h3>
                    {{#if err}}
                    <div class="alert alert-danger text-center  " role="alert">
                        choosh any files
                    </div>
                    {{/if}}

                </div>

                <div class="row " style="width: 60%;">
                    <form action="/tutor-announcement" method="post" enctype="multipart/form-data">

                    <div class="mb-3">
                        <label for="exampleFormControlInput1" class="form-label">Message</label>
                        <input type="text" class="form-control" name="Message" id="exampleFormControlInput1"
                            placeholder="Enter you Topics" required>
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlTextarea1">Description</label>
                        <textarea class="form-control" id="exampleFormControlTextarea1" name="Description"
                            rows="2" required></textarea>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div style="height: 250px; padding: 6px;" class="bg-info text-center">
                                Image
                                <hr>
                                <input type="file" id="photoFile" name="Photo"
                                    onchange="loadFile(event) ;return photoValidation();" hidden />
                                <label for="photoFile" class="btn btn-primary m-1">Choose file</label>
                                <img src="" style="width: 100%; height: 100px;" id="imageoutput" alt="">
                                <button class="close bg-info border-0 text-center" onclick="cleaarimage()"
                                    aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>

                        </div>

                        <div class="col-md-4">
                            <div style="height: 250px; padding: 6px;" class="bg-info text-center">
                                PDF
                                <hr>
                                <input type="file" id="filePdf" name="PdfFile"
                                    onchange="loadpdfFile(event);return fileValidation(); " hidden />
                                <label for="filePdf" class="btn btn-primary m-1">Choose file</label>
                                <iframe id="pdfDoc" frameborder="0" scrolling="no"
                                    style="width: 100%; max-height: 100px;"></iframe>




                                <button class="close bg-info border-0 text-center" onclick="cleaarpdf()"
                                    aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>

                        </div>

                        <div class="col-md-4">
                            <div style="height: 250px; padding: 6px;" class="bg-info text-center">
                                Video
                                <hr>
                                <input type="file" id="videofile" name="Video"
                                    onchange=" loadvideoFile(event);return videoValidation();videotoggel();" hidden />
                                <label for="videofile" class="btn btn-primary m-1">Choose file</label>
                                <div class="embed-responsive embed-responsive-1by1" id="videoDiv">
                                    {{!-- <iframe class="embed-responsive-item" src="/OptionPrintkeam"></iframe> --}}
                                    <video src="" id="videoview" style="width: 100%; height: 100px;" controls></video>
                                </div>
                                <button class="close bg-info border-0 text-center" onclick="clearvideo()"
                                    aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>

                        </div>

                    </div>





                    <button type="submit" class="btn btn-primary mt-5">save</button>
                    </form>
                </div>


            </div>


        
     
    <!-- /#page-content-wrapper -->

</div>
</div>
<!-- /#wrapper -->



