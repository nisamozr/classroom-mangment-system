<div class="d-flex" id="wrapper">
  <!-- Sidebar -->
  {{#if user}}
  {{>tutor-sidenav}}
  {{/if}}
  <!-- /#sidebar-wrapper -->
  <!-- Page Content -->
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
          <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
          </ol>
          <div class="carousel-inner">
            <div class="carousel-item active">
              <a href="/toutor-photoAlbum">
                {{#if photo1}}
                <img src="{{photo1.Photos.FileAddress }}" class="d-block w-100" alt="...">
                {{else}}
                <img src="/images/background/default-cover.png" class="d-block w-100" alt="...">

                {{/if}}
              </a>
            </div>
            <div class="carousel-item">
              <a href="/toutor-photoAlbum">
                {{#if photo2}}
                <img src="{{photo2.Photos.FileAddress }}" class="d-block w-100" alt="...">
                {{else}}
                <img src="/images/background/default-cover.png" class="d-block w-100" alt="...">
                {{/if}}
              </a>
            </div>
            <div class="carousel-item">
              <a href="/toutor-photoAlbum">
                {{#if photo3}}
                <img src="{{photo3.Photos.FileAddress }}" class="d-block" alt="...">
                {{else}}
                <img src="/images/background/default-cover.png" class="d-block w-100" alt="...">
                {{/if}}
              </a>
            </div>
            <div class="carousel-item">
              <a href="/toutor-photoAlbum">
                {{#if photo4}}
                <img src="{{photo4.Photos.FileAddress }}" class="d-block" alt="...">
                {{else}}
                <img src="/images/background/default-cover.png" class="d-block w-100" alt="...">
                {{/if}}
              </a>
            </div>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <div class="dash ">
          <h5>Announcerments</h5>
          <hr>
          <div class="table-wrapper-scroll-y my-custom-scrollbar" style="height: 220px;">
            <ul>
              {{#each annoncement}}
              <li> <a href='/tutor-announcement'>{{this.Message}}</a></li>
              {{/each}}
            </ul>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="dash ">
          <h5>Events</h5>
          <hr>
          <div class="table-wrapper-scroll-y my-custom-scrollbar" style="height: 220px;">
            <ul>
              {{#each event}}
              <li> <a href='/tutor-events'>{{this.EventName}}</a></li>
              {{/each}}

            </ul>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="dash">
          <h5>Booked Events</h5>
          <hr>
          <ul>
            <div class="table-wrapper-scroll-y my-custom-scrollbar">
              <table class="table table-bordered table-striped mb-0 text-center">
                <thead>
                  <tr>
                    <th scope="col">Date</th>
                    <th scope="col">Name of student</th>
                    <th scope="col">Event Name</th>
                  </tr>
                </thead>
                <tbody>
                  {{#each BookedEvent}}
                  <tr>
                    <td>{{this.Date}}</td>
                    <td>{{this.studentName}}</td>
                    <td>{{this.eventName}}</td>
                  </tr>
                  {{/each}}
                </tbody>
              </table>
            </div>
          </ul>
        </div>
      </div>
    </div>
    <footer>
      <h5>Contact Details</h5>
      <p><span>Principal:</span>987654321, <span>HOD:</span>987654321, <span>Tutor:</span>987654321</p>
    </footer>
  </div>
  <!-- /#page-content-wrapper -->
</div>
</div>
<!-- /#wrapper -->