  </aside>


  <div class="main">
    <div class="container  ">
      <div class="row topic">
        <div class="col-md-12 m-2 ">
          <h3 class="text-center">Assignment</h3>

          {{#if TopicErr}}
          <div class="alert alert-danger text-center  " role="alert">
            Assignment Topic is not Maching
          </div>
          {{/if}}
        </div>
        <div class="row w-50  ">
          <form action="/student/assignment" method="post" enctype="multipart/form-data">
            <div class="mb-3">
              <label for="exampleFormControlInput1" class="form-label">Topics</label>
              <input type="text" class="form-control" name="Topic" id="exampleFormControlInput1"
                placeholder="Enter you Topics" required>
            </div>

            <div class="mb-3">
              <label for="formFileMultiple" class="form-label"> files </label>
              <input class="form-control" type="file" name="AssignmentFile" id="filePdf" onchange="return fileValidation()" required>
            </div>
            <button type="submit" class="btn btn-primary">Post</button>

        </div>
        </form>





      </div>
      <div class="row mt-5">
        <div class="col-md-6">
          <div class="text-center text-danger">
            Assignment Topics
          </div>
          <table class="table table-striped text-center">
            <thead>
              <tr>
                <th scope="col" width=30%>Topic</th>
                <th scope="col" width=50%>File</th>
                <th scope="col" width=20%>Date</th>


              </tr>
            </thead>
            <tbody>
              {{#each assignment.Assignment}}
              <tr>
                <td>{{this.Topic}}</td>
                <td><a href="/{{this.FileAddress}}">{{this.FileName}}</a></td>
                <td>{{this.PostAt}}

                </td>


              </tr>
              {{/each}}


            </tbody>
          </table>
        </div>
         <div class="col-md-6">
            <div class="text-center text-danger">
            Submitted Assignment 
          </div>
          <table class="table table-striped text-center">
            <thead>
              <tr>
                <th scope="col" width=25%>Topic</th>
                <th scope="col" width=45%>File</th>
                <th scope="col" width=20%>Date</th>
                 <th scope="col" width=10%>Delet</th>


              </tr>
            </thead>
            <tbody>
              {{#each Subassignment.Assignment}}
              <tr>
                <td>{{this.Topic}}</td>
                <td><a href="/{{this.FileAddress}}">{{this.FileName}}</a></td>
                <td>{{this.PostAt}}

                </td>
                <td> <a href="/student/assignment-delet-assingnment{{this._id}}"  onclick="return confirm('Do you whant to remove this{{this.FileName}}?')"> <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24"
