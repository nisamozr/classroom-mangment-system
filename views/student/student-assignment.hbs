<div class="side d-flex flex-row bd-highlight">
  <aside class="sidenav">
    <ul>
      <li>
        <a href="/student">Home</a>

      </li>
      <li>
        <a href="/student/Profile">Profile</a>

      </li>
      <li>
        <a href="/student/todays-task">Today's Task</a>

      </li>

      <li>
        <a href="/student/attendance">Attendance</a>

      </li>
      <li>
        <a href="/student/assignment">Assignment</a>

      </li>
      <li>
        <a href="/student/notes">Notes</a>

      </li>
      <li>
        <a href="/student/announcement">Announcement</a>
      </li>

    </ul>




  </aside>


  <div class="main">
    <div class="container  ">
      <div class="row topic">
        <div class="col-md-12 m-2 ">
          <h3 class="text-center">Assignment</h3>
        </div>
        <div class="row w-50  ">
          <form action="/student/assignment" method="post" enctype="multipart/form-data">
            <div class="mb-3">
              <label for="exampleFormControlInput1" class="form-label">Topics</label>
              <input type="text" class="form-control" name="Topic" id="exampleFormControlInput1"
                placeholder="Enter you Topics">
            </div>

            <div class="mb-3">
              <label for="formFileMultiple" class="form-label"> files </label>
              <input class="form-control" type="file" name="AssignmentFile" id="formFileMultiple" required>
            </div>
            <button type="submit" class="btn btn-primary">Post</button>

        </div>
        </form>





      </div>
      <div class="row mt-5">
        <div class="col-md-12">
          <table class="table table-striped text-center">
            <thead>
              <tr>
                <th scope="col" width=30%>Topic</th>
                <th scope="col" width=50%>File</th>
                <th scope="col" width=20%>Date</th>


              </tr>
            </thead>
            <tbody>
              {{#each assignment.Assignment}}
              <tr>
                <td>{{this.Topic}}</td>
                  <td><a href="/{{this.FileAddress}}">{{this.FileName}}</a></td>
                <td>{{this.PostAt}}
                 
                </td>


              </tr>
              {{/each}}


            </tbody>
          </table>
        </div>
      </div>



    </div>
  </div>




</div>
</div>