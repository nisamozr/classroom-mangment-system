<div class="side d-flex flex-row bd-highlight">
    <aside class="sidenav">
        <ul>
            <li>
                <a href="/student">Home</a>

            </li>
            <li>
                <a href="/student/Profile">Profile</a>

            </li>
            <li>
                <a href="/student/todays-task">Today's Task</a>

            </li>

            <li>
                <a href="/student/attendance">Attendance</a>

            </li>
            <li>
                <a href="/student/assignment">Assignment</a>

            </li>
            <li>
                <a href="/student/notes">Notes</a>

            </li>
            <li>
                <a href="/student/announcement">Announcement</a>
            </li>

        </ul>




    </aside>

    <div class="main">
        <div class="container  ">
          
          
            <div class="row ">
                  {{#each note.Notes}}
                <div class="col-md-12 col-lg-4 mb-4">
                    <div class="card text-center">
                        <div class="card-header">
                            Notes(video)
                           
                        </div>
                        <div class="card-body">
                      
                            <a href="/{{this.VideoAddress}}" onclick="changeQuantity('{{this._id}}')" id="video">
                            <div class="embed-responsive embed-responsive-1by1">
                                {{!-- <iframe class="embed-responsive-item" src="/OptionPrintkeam"></iframe> --}}
                               <video  src="/{{this.VideoAddress}}" controls></video>
                            </div>
                            </a>
                            <h5 class="card-title"> {{this.Topic}}</h5>
                           <p>Wach video for Attendance</p>
                           
                        </div>
                        <div class="card-footer text-muted">
                            {{this.PostAt}}
                        </div>
                    </div>


                </div>

                <div class="col-md-12 col-lg-4 mb-4">
                    <div class="card text-center ">
                        <div class="card-header">
                             Notes(PDF)
                        </div>
                        
                        <div class="card-body">
                        
                         <div>
                            <embed src="/{{this.DocumentAddress}}" id="pdfDoc"  width="500" height="375">
                            </div>
                            
                            <h5 class="card-title">{{this.Topic}}</h5>
                           
                            <a href="/{{this.DocumentAddress}}" class="btn btn-primary">Opent Document</a>
                        </div>
                        <div class="card-footer text-muted">
                           {{this.PostAt}}
                        </div>
                    </div>


                </div>
                {{#if this.Link}}
                <div class="col-md-12 col-lg-4 mb-4">
                    <div class="card text-center">
                        <div class="card-header">
                              Notes(youtube)
                        </div>
                        <div class="card-body">
                            
                            <div class="embed-responsive embed-responsive-1by1">
                                <iframe class="embed-responsive-item"
                                    src="{{this.Link}}"></iframe>
                            </div>
                            
                            <h5 class="card-title">{{this.Topic}}</h5>
                           
                            
                            <a href="{{this.Link}}" class="btn btn-primary">Open Link</a>
                        </div>
                        <div class="card-footer text-muted">
                            {{this.PostAt}}
                        </div>
                    </div>


                </div>
                {{/if}}
                {{/each}}
                 {{#each Assig.Assignment}}
                 <div class="col-md-12 col-lg-4 mb-4">
                    <div class="card text-center ">
                        <div class="card-header">
                            Assignment
                        </div>
                        <div class="card-body">
                         
                            <embed src="/{{this.FileAddress}}" id="pdfDoc"  width="500" height="375">
                            <h5 class="card-title">{{this.Topic}}</h5>
                            
                            <a href="/{{this.FileAddress}}" class="btn btn-primary">Go Document</a>
                        </div>
                        <div class="card-footer text-muted">
                           {{this.PostAt}}
                        </div>
                    </div>
             
            </div>
               {{/each}}


                




            </div>
            <hr>
            <div class="row">

               
            



        </div>
    </div>



</div>
</div>
<script>
   function changeQuantity(Id) {

        $.ajax({
            url: '/student/notes-attendense',
            data: {
                video:Id             
            },
            method: 'get',
           
            success: (response) => {
               
                    alert("product removed from cart")
                    onload()
                   
                
            }

        })

    }

 
</script>